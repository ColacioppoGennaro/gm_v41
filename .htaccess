apache# ============================================
# GM_V41 - ROOT .htaccess
# ============================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /gm_v41/

    # SECURITY - Blocca .env e file sensibili
    <FilesMatch "^\.env|composer\.(json|lock)|\.git">
        Order allow,deny
        Deny from all
    </FilesMatch>

    # CORS Headers
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"

    # Redirect /api/* to /backend/api/index.php
    RewriteRule ^api/(.*)$ backend/api/index.php [QSA,L]

    # Frontend - tutto il resto va a frontend/dist/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/gm_v41/backend/
    RewriteRule ^(.*)$ frontend/dist/$1 [L]

    # Default: index.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^$ frontend/dist/index.html [L]
</IfModule>

Options -Indexes