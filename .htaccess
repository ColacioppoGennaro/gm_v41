# ============================================
# GM_V41 - ROOT .htaccess
# ============================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /gm_v41/

    # SECURITY - Blocca .env e file sensibili
    <FilesMatch "^\.env|composer\.(json|lock)|\.git">
        Order allow,deny
        Deny from all
    </FilesMatch>

    # CORS Headers
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"

    # OPTIONS preflight
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]

    # API routes â†’ backend/api/index.php
    RewriteRule ^api/(.*)$ backend/api/index.php [QSA,L]

    # Frontend assets
    RewriteCond %{REQUEST_URI} ^/gm_v41/assets/
    RewriteRule ^assets/(.*)$ frontend/dist/assets/$1 [L]

    # Frontend - serve index.html per tutto il resto
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ frontend/dist/index.html [L]
</IfModule>

Options -Indexes