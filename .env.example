# ============================================
# GM_V41 - SMARTLIFE AI ORGANIZER
# Environment Variables Template
# ============================================

# IMPORTANTE: 
# - Copia questo file in .env sul server
# - NON committare MAI il file .env reale
# - Compila TUTTI i valori prima del deploy

# ============================================
# APPLICATION
# ============================================
APP_NAME="SmartLife AI Organizer"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tuodominio.it

# Timezone (Europe/Rome consigliato)
APP_TIMEZONE=Europe/Rome

# ============================================
# DATABASE (MySQL/MariaDB)
# ============================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nome_database
DB_USERNAME=utente_database
DB_PASSWORD=password_database

# Character set (NON modificare)
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ============================================
# JWT AUTHENTICATION
# ============================================
# Genera con: openssl rand -base64 64
JWT_SECRET=GENERA_STRINGA_RANDOM_64_CARATTERI_QUI
JWT_EXPIRATION=604800

# Durata token in secondi (604800 = 7 giorni)

# ============================================
# GOOGLE GEMINI API
# ============================================
# Ottieni da: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSy...

# Modello da usare (default: gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# ============================================
# GOOGLE OAUTH (Calendar Sync)
# ============================================
# Ottieni da: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=123456789-abc123def456.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-abc123def456ghi789
GOOGLE_REDIRECT_URI=https://tuodominio.it/api/auth/google/callback

# Scope richiesti (NON modificare)
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar.events

# ============================================
# FILE UPLOAD
# ============================================
# Path assoluto upload (default: /uploads)
UPLOAD_PATH=/path/to/uploads

# Limiti dimensioni (in bytes)
UPLOAD_MAX_SIZE_FREE=10485760
UPLOAD_MAX_SIZE_PRO=524288000

# 10485760 bytes = 10 MB (FREE)
# 524288000 bytes = 500 MB (PRO)

# Tipi file permessi (separati da virgola)
ALLOWED_MIME_TYPES=application/pdf

# ============================================
# RATE LIMITING
# ============================================
# Richieste per ora
RATE_LIMIT_FREE=100
RATE_LIMIT_PRO=500

# Query AI per mese
AI_QUERIES_LIMIT_FREE=20
AI_QUERIES_LIMIT_PRO=500

# ============================================
# EMAIL (per notifiche future)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@tuodominio.it
MAIL_PASSWORD=password_email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tuodominio.it
MAIL_FROM_NAME="SmartLife AI"

# ============================================
# PAYMENT (Stripe - Fase 2)
# ============================================
# STRIPE_PUBLIC_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# LOGGING & DEBUGGING
# ============================================
LOG_CHANNEL=file
LOG_LEVEL=error

# Path log file (default: /backend/logs/app.log)
LOG_FILE=/path/to/logs/app.log

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================
# Domini permessi (separati da virgola)
CORS_ALLOWED_ORIGINS=https://tuodominio.it,https://www.tuodominio.it

# Se sviluppo locale, aggiungi:
# CORS_ALLOWED_ORIGINS=http://localhost:5173,https://tuodominio.it

# ============================================
# SESSION (se usi sessioni PHP invece di JWT)
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=10080

# 10080 minuti = 7 giorni

# ============================================
# CACHE (opzionale, per performance)
# ============================================
CACHE_DRIVER=file
CACHE_PREFIX=gm_v41

# ============================================
# BACKUP DATABASE (cron)
# ============================================
BACKUP_PATH=/path/to/backups
BACKUP_RETENTION_DAYS=30

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Disabilita in produzione!
# DEV_MODE=false
# QUERY_LOG=false
